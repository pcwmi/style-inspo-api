{
  "permissions": {
    "allow": [
      "Read(//Users/peichin/Projects/**)",
      "Read(//Users/peichin/Downloads/**)",
      "Read(//Users/peichin/.claude/**)",
      "WebSearch",
      "WebFetch(domain:platform.openai.com)",
      "WebFetch(domain:styleinspo.vercel.app)",
      "WebFetch(domain:style-inspo-api-production.up.railway.app)",
      "Bash(mkdir:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(source:*)",
      "Bash(pip install:*)",
      "Bash(streamlit run:*)",
      "Bash(test:*)",
      "Bash(say:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(for:*)",
      "Bash(curl:*)",
      "Bash(tee:*)",
      "Bash(git init:*)",
      "Bash(git config:*)",
      "Bash(git log:*)",
      "Bash(brew install:*)",
      "Bash(npm run:*)",
      "Bash(open:*)",
      "Bash(vercel:*)",
      "Bash(rq worker:*)",
      "Bash(STORAGE_TYPE=:*)",
      "Skill(start-the-day)",
      "Skill(capture)"
    ],
    "deny": [
      "Bash(gh:*)"
    ],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"I'm done\""
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"waiting\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git push:*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/check-untracked.sh"
          }
        ]
      },
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/run-smoke-tests.sh",
            "timeout": 60,
            "statusMessage": "Running smoke tests..."
          }
        ]
      }
    ]
  },
  "outputStyle": "default"
}
